---
import { getCollection } from "astro:content";
import HomeLayout from "../ui/layouts/HomeLayout.astro"

let postsC = (await getCollection('posts')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
let posts = postsC.map(post => ({
  title: post.data.title,
  slug: post.slug,
  date: post.data.pubDate,
}))
---

<HomeLayout {posts} />
