---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";

type Props = { posts: CollectionEntry<'blog'>[]};

const { posts } = Astro.props;

---
<!doctype html>
<html lang="pt-br">
	<head>
		<BaseHead />
		<style>
      @keyframes appear {
        from { opacity: 0; }
        to { opacity: 1; }
      }
      body::-webkit-scrollbar {
        display: none;
      }
			main {
				width: 960px;
	      max-width: calc(100% - 2em);
	      margin: auto;
	      padding: 2em 1em;
			}
			ul {
				display: flex;
        flex-direction: column;
        align-items: center;
				gap: 25px;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
        padding: 5px;
        animation: appear 550ms ease-in;
			}
			ul li * {
				text-decoration: none;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
        padding-left: 15px;
				color: var(--secondary);
				line-height: 1;
			}
			.date {
				margin: 0;
        padding-left: 15px;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: var(--accent);
			}
			@media (max-width: 720px) {
				ul {
					gap: 1.25em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
			}
		</style>
	</head>
	<body>
		<Header/>
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/posts/${post.slug}/`}
                   transition:animate="fade"
                >
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
                <hr />
							</li>
						))
					}
				</ul>
			</section>
		</main>
	</body>
</html>
